<Window x:Class="DataBase2.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text In File Window" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="prev" Width="40" Margin="0,0,250,0"/>
        <Button Grid.Row="1" Content="next" Width="40" Margin="250,0,0,0" />
        <Label Grid.Row="1" Content="match 0 from 0 for 'Text' in 'File'" Width="200"/>
        <TextBox Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
